        <Swiper />
        <div class="flex justify-end items-center">
            <div class="flex justify-end items-center footer-of-hero">
                <div class="sell-books-text max-[370px]:text-lg">Sprzedawaj <b class="font-black">książki</b></div>
                <div class="text-right scroll-animate max-[370px]:text-lg">
                    <span>tanio</span>
                    <span>szybko</span>
                    <span>wygodnie</span>
                </div>
                <button type="button" class="mr-5 ml-2 text-white bg-highlight-1 hover:bg-highlight-2 focus:ring-4 focus:outline-none focus:ring-highlight-1-300 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center rotate-90">
