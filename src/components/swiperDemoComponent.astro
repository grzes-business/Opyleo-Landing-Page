---
// src/pages/index.astro
import 'swiper/css';
import 'swiper/css/autoplay';
import CardTemplate from './cardTemplate.astro';
import { getBooks } from '../js/api.ts';

const books = await getBooks();
const state = ["Zły", "Umiarowany", "Dobry", "Bardzo dobry"];
---



    <main class="w-screen flex items-center">
      <div class="swiper overflow-visible">
        <div class="swiper-wrapper">
          {books.map((book) => (
            <div class="swiper-slide !flex items-center">
              <CardTemplate
                  title = {book.title}
                  price = {`${book.price} zł`}
                  state = {state[book.condition - 1]}
                  seller = {book.creator_name}
                  imageUrl = {book.first_image}
              />
            </div>
            ))}
        </div>
      </div>
    </main>

    <style>
      ::-webkit-scrollbar {
        display: none;
      }
      .swiper-slide {
        display: unset;
      }
      body {
        overscroll-behavior: none;
      }
    </style>

    <script>
      import { Swiper } from 'swiper';  // Import the Autoplay module
      import { Autoplay } from 'swiper/modules';
      const swiper = new Swiper('.swiper', {
        modules: [Autoplay], 
        slidesPerView: 1.5,
        loop: true,
        centeredSlides: true,
        spaceBetween: 30,
        allowTouchMove: false,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false
        }
      });
    </script>
